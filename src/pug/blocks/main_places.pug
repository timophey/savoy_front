.container
    .main_places(data-theme="dark").row.flex-column.flex-sm-row.cg-3.pb-10.mt-4.border-top.border-bottom.pb-lg-0
        .main_places_preview.mb-1.col-3.col-lg-3.mb-lg-0
            h1.fs-32 Quis autem vel eum iure reprehenderit
            p Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur ma
        .main_places_card.d-flex.flex-column.g-2.col-3.col-sm-2.col-lg-2.pb-lg-10.pt-lg-3
            .main_places_picture.br-12
                img(src="images/place1.png", alt="")
