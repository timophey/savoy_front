                    a.button.btn.btn-secondary.button--calypso
                        span Показать В 2Gis
        .main_places_card.d-flex.flex-column.g-2.col-3.col-sm-2.col-lg-2.pb-lg-10.pt-lg-3
            .main_places_picture.br-12
                img(src="images/place2.png", alt="")
